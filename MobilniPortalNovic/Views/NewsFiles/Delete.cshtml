@model MobilniPortalNovicLib.Models.NewsFile

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>NewsFile</legend>

    <div class="display-label">ShortContent</div>
    <div class="display-field">@Model.ShortContent</div>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">Content</div>
    <div class="display-field">@Model.Content</div>

    <div class="display-label">PubDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.PubDate)</div>

    <div class="display-label">Feed</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Feed).ToString()</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


